<Window x:Class="DSManager.View.AddNewEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSManager.View"
        mc:Ignorable="d"
        Title="AddNewEntryWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="ФИО" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Отделение/Подразделение" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Дата установки" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Дата выпуска" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"/>
        <Label Content="Дата окончания" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0"/>
        <Label Content="Статус" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0"/>

        <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" x:Name="FioField"/>
        <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" x:Name="DepartmentField"/>
        <DatePicker Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" x:Name="SetupField"/>
        <DatePicker Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" x:Name="StartField"/>
        <DatePicker Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" x:Name="EndField"/>
        <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Source={StaticResource enum}}" VerticalAlignment="Center" x:Name="StatusComboBox"/>
        <Grid Grid.Row="6" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Content="Добавить Отделение/Подразделение" HorizontalContentAlignment="Center"/>
                <TextBox x:Name="AddDepartmentTextBox" Height="30"/>
                <Button x:Name="AddDepartmentButton" Content="Добавить" HorizontalAlignment="Center" Padding="20 5"/>
            </StackPanel>
            <Button x:Name="CreateEntryButton"
                Grid.Column="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Padding="60 20"
                Content="Создать запись"/>
            <StackPanel Grid.Column="3">
                <Label Content="Удалить Отделение/Подразделение" HorizontalContentAlignment="Center"/>
                <ComboBox x:Name="RemoveDepartmentCombobox" Height="30"/>
                <Button x:Name="RemoveDepartmentButton" Content="Удалить" HorizontalAlignment="Center" Padding="20 5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
